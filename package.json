{
  "name": "sitebender.io",
  "version": "0.0.3",
  "private": true,
  "homepage": "https://sitebender.io/",
  "license": "MIT",
  "author": "Charles Munat <coder@sitebender.io>",
  "type": "module",
  "browser": {
    "crypto": false,
    "exif-reader": false
  },
  "scripts": {
    "api": "vercel dev",
    "api:dev": "vercel dev -A dev.vercel.json",
    "astro": "astro",
    "build": "astro build",
    "bump": "pnpm version patch --force",
    "bump:major": "pnpm version major --force",
    "bump:minor": "pnpm version minor --force",
    "check:exports": "pnpx find-unused-exports",
    "check:packages": "pnpx npm-check -u",
    "dep": "pnpm fmt && pnpm lint && pnpm lint:fix && pnpm check:packages && infisical run -- pnpm build && rm -rf .cache .history dist",
    "dep:prod": "pnpm dep:dev && vercel deploy",
    "dev": "astro dev",
    "fmt": "pnpm biome format --write ./",
    "lint": "pnpm biome check --apply-unsafe ./",
    "lint:css": "pnpm stylelint \"src/**/*.css\"",
    "lint:fix": "pnpm stylelint \"src/**/*.css\" --fix",
    "preview": "astro preview",
    "push": "git add -A && pnpm bump && git push",
    "start": "astro dev",
    "test": "pnpm test:int",
    "test:cov": "vitest run --coverage",
    "test:int": "vitest"
  },
  "devDependencies": {
    "@astrojs/mdx": "^2.0.0",
    "@astrojs/sitemap": "^3.0.3",
    "@astrojs/vercel": "^6.0.0",
    "@biomejs/biome": "1.4.1",
    "@js-temporal/polyfill": "^0.4.4",
    "@sitebender/components": "^0.1.84",
    "@tgwf/co2": "^0.13.9",
    "@types/qrcode": "^1.5.5",
    "@vercel/node": "^3.0.11",
    "@vitest/coverage-v8": "^1.0.1",
    "astro": "^4.0.2",
    "exifr": "^7.1.3",
    "exifreader": "^4.17.0",
    "qrcode": "^1.5.3",
    "rollup": "^4.6.1",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "typescript": "^5.3.2",
    "vercel": "^32.6.1",
    "vite": "^5.0.5",
    "vite-plugin-compress": "^2.1.1",
    "vitest": "^1.0.1"
  }
}
